# Scenario:
#  T1= ({R(Z), R(B)})
#  T2= ({R(C), R(B), W(B)})
#  T3= ({R(B), W(B), C}, HIGH_PRIORITY)
#
# Outcome: Wait for T1, abort T2 and commit T3.

CREATE TABLE t1 (c1 INT NOT NULL PRIMARY KEY, c2 INT NOT NULL, c3 INT NOT NULL) ENGINE=InnoDB;
INSERT INTO t1 VALUES (0, 0, 0);

--connect(con1,localhost,root,,test)
--connect(con2,localhost,root,,test)
--connect(con3,localhost,root,,test)

--echo
--echo # On connection 1
--connection con1
START TRANSACTION READ ONLY;
SELECT c1, c2 FROM t1 WHERE c1=0 LOCK IN SHARE MODE;

--echo
--echo # On connection 2
--connection con2
START TRANSACTION;
--send UPDATE t1 SET c1=2 WHERE c1=0 AND c2=0

--echo
--echo # On connection 3
--connection con3
START TRANSACTION HIGH_PRIORITY;
UPDATE t1 SET c1=3 WHERE c1=0;

--echo
--echo # On connection 1
--connection con1
--error ER_ERROR_DURING_COMMIT
COMMIT;

--echo
--echo # On connection 3
--connection con3
COMMIT;

--echo
--echo # On connection 2
--connection con2
--reap
--error ER_ERROR_DURING_COMMIT
COMMIT;

