--source include/have_innodb.inc

let $n=250;
let $t=veryLongTableNameToCreateMLOG_FILE_NAMErecords;

--disable_query_log
call mtr.add_suppression("InnoDB: Resizing redo log");
call mtr.add_suppression("InnoDB: Starting to delete and rewrite log files");
call mtr.add_suppression("InnoDB: New log files created");

let $i=$n;
while ($i)
{
--eval CREATE TABLE $t$i(a INT PRIMARY KEY) ENGINE=InnoDB;
dec $i;
}

# Write file to make mysql-test-run.pl restart the server
--exec echo "restart: --innodb-log-files-in-group=2 --innodb-log-file-size=1M" > $MYSQLTEST_VARDIR/tmp/mysqld.1.expect

--shutdown_server 0
--error 2013
SHOW TABLES;

--enable_reconnect
--source include/wait_until_connected_again.inc
--disable_reconnect

--disable_query_log
let $i=$n;
while ($i)
{
--eval DROP TABLE $t$i;
dec $i;
}
--enable_query_log
