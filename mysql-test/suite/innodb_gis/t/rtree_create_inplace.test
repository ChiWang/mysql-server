# create spatial index
CREATE SPATIAL INDEX idx ON t1(c2);

CHECK TABLE t1;

SELECT COUNT(*) FROM t1;

SET @g1 = GeomFromText('Polygon((0 0,0 100,100 100,100 0,0 0))');
